<div class="jumbotron">
    <h1>Receipt Reader</h1>
    <p>Manage your shopping bills in one place.</p>

    @if (Session["access_token"] == null || Session["username"] == null)
    {
        <div>
            @Html.ActionLink("Login", "Login", new { controller = "Account" }, new { @class = "btn btn-primary btn-lg" })
            @Html.ActionLink("Register", "Register", new { controller = "Account" }, new { @class = "btn btn-primary btn-lg" })
        </div>
    }
    else
    {
        <div>
            @Html.ActionLink("Receipts", "", new { controller = "Receipts" }, new { @class = "btn btn-primary btn-lg" })
            @Html.ActionLink("Expenses chart", "Chart", new { controller = "Products" }, new { @class = "btn btn-primary btn-lg" })
        </div>
    }

</div>

